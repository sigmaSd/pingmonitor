<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>io.github.sigmasd.pingmonitor</id>
  <name>Ping Monitor</name>
  <summary>Monitor your ping</summary>
  <developer_name>Bedis Nbiba</developer_name>

  <metadata_license>CC0</metadata_license>
  <project_license>MIT</project_license>

  <description>
    <p>Ping Monitor is a simple tool to monitor your network.</p>
    <p>Features:</p>
    <ul>
      <li>Display your ping in real time as a nice chart</li>
      <li>Make it obvious when you're disconnected</li>
      <li>Monitor download and upload speeds</li>
      <li>Display local and public IP addresses</li>
      <li>Automatically detect network and VPN changes</li>
    </ul>
  </description>

  <launchable type="desktop-id">io.github.sigmasd.pingmonitor.desktop</launchable>

  <screenshots>
    <screenshot type="default" style="light">
      <caption>Ping Monitor interface</caption>
      <image>https://raw.githubusercontent.com/sigmaSd/pingmonitor/master/distro/demo-init.png</image>
    </screenshot>
  </screenshots>

  <url type="homepage">https://github.com/sigmaSd/pingmonitor</url>
  <url type="bugtracker">https://github.com/sigmaSd/pingmonitor/issues</url>

  <content_rating type="oars-1.1" />

  <releases>
    <release version="0.9.2" date="2025-12-27">
      <description>
        <p>Switch to cloudflare traces to get the public ip (handles bot waves)</p>
      </description>
    </release>
    <release version="0.9.1" date="2025-12-23">
      <description>
        <p>Display local and public IP addresses</p>
        <p>Monitor network and VPN changes automatically</p>
        <p>Allow copying IP addresses to clipboard</p>
      </description>
    </release>
    <release version="0.8.0" date="2025-12-21">
      <description>
        <p>Retry ping if it fails</p>
        <p>Add download/upload speed</p>
      </description>
    </release>
    <release version="0.7.0" date="2025-12-16">
      <description>
        <p>Add play/pause button</p>
        <p>Add dynmaic provider selection</p>
      </description>
    </release>
    <release version="0.6.1" date="2025-12-16">
      <description>
        <p>Record the history of disconnects in the UI by keeping the points red</p>
      </description>
    </release>
    <release version="0.5.0" date="2025-12-15">
      <description>
        <p>UI improvements</p>
      </description>
    </release>
    <release version="0.1.0" date="2025-11-28">
      <description>
        <p>Initial release</p>
      </description>
    </release>
  </releases>

  <keywords>
    <keyword>ping</keyword>
    <keyword>network</keyword>
    <keyword>monitor</keyword>
  </keywords>
  <categories>
    <category>Utility</category>
    <category>Network</category>
  </categories>

  <provides>
    <binary>pingmonitor</binary>
  </provides>
</component>
